#!/usr/bin/env python
# -*- coding: utf-8 -*-

def build(bld):
    name = 'root_domain'
    mod = bld.new_task_gen('cxx', 'program')
    mod.env = bld.env_of_name('KERNEL_ENV').copy()
    mod.env.append_unique('LINKFLAGS', ['-Wl,-r']); # Components are relocatable
    mod.env.append_unique('LINKFLAGS', ['-T', '../modules/component.lds', '-Wl,-Map,'+name+'.map'])
    mod.target = name+'.comp'
    bld.new_task_gen(
        source = name+'.comp',
        rule = 'nm -u ${SRC[0].abspath(env)}',
        name = name+' module nm undef check',
        after = 'cxx_link'
    )
    mod.source = 'entry.cpp root_domain.cpp'.split() + ['../../interfaces/frames_module_v1_interface.cpp', '../../interfaces/mmu_module_v1_interface.cpp']
    mod.idl_source = 'all_idl'
    mod.includes = '. ../../runtime ../../runtime/stl ../../interfaces ../../kernel/generic ../../kernel/arch/x86 ../../kernel/platform/pc99'
    mod.uselib_local = 'component_support platform kernel minruntime common'

# kate: indent-width 4; replace-tabs on;
# vim: set et sw=4 ts=4 sts=4 cino=(4 :
